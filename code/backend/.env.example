# Backend environment variables example
# Copy this file to `.env` and replace the placeholder values with your own
# configuration. This file is ignored by version control.

# Port on which the Express server will listen
PORT=4000

# PostgreSQL database connection string
DATABASE_URL=postgres://user:password@localhost:5432/your_database

# Redis connection string (optional: used for caching, session storage, etc.)
REDIS_URL=redis://localhost:6379

# YouTube Data API key (for fetching video details and playlists automatically)
YOUTUBE_API_KEY=your_youtube_data_api_key_here

# Admin secret for protected admin endpoints (required for OAuth + updates)
ADMIN_SECRET=change_me_long_random

# YouTube OAuth (WRITE access) â€” create OAuth client in Google Cloud Console
# Redirect URI must match exactly. Example:
# https://your-domain.tld/api/admin/youtube/oauth/callback
YOUTUBE_OAUTH_CLIENT_ID=your_oauth_client_id
YOUTUBE_OAUTH_CLIENT_SECRET=your_oauth_client_secret
YOUTUBE_OAUTH_REDIRECT_URI=https://your-domain.tld/api/admin/youtube/oauth/callback

# Optional: where to send the browser after OAuth connect
# If not set, backend will redirect to same host: /admin/login?connected=1
FRONTEND_BASE_URL=https://your-domain.tld
# ADMIN_OAUTH_SUCCESS_REDIRECT=https://your-domain.tld/admin/login?connected=1

# Any other API keys or secrets can be added here
