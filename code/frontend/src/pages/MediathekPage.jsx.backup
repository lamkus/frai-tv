/* ========== Preview Strip (20% height, auto-rotate) ========== */
function PreviewStrip({ videos, onPlay, t }) {
  const [activeIndex, setActiveIndex] = useState(0);
  const [progress, setProgress] = useState(0);
  const slideTimerRef = useRef(null);
  const progressRef = useRef(null);

  useEffect(() => {
    if (!videos?.length) return undefined;

    // Reset any running timers when video set changes
    setProgress(0);
    if (slideTimerRef.current) clearInterval(slideTimerRef.current);
    if (progressRef.current) clearInterval(progressRef.current);

    slideTimerRef.current = setInterval(() => {
      setActiveIndex((prev) => (prev + 1) % videos.length);
      setProgress(0);
    }, 5200);

    progressRef.current = setInterval(() => {
      setProgress((prev) => (prev >= 100 ? 0 : prev + 4));
    }, 200);

    return () => {
      if (slideTimerRef.current) clearInterval(slideTimerRef.current);
      if (progressRef.current) clearInterval(progressRef.current);
    };
  }, [videos]);

  const windowVideos = useMemo(() => {
    if (!videos?.length) return [];
    const maxCards = Math.min(5, videos.length);
    const list = [];
    for (let i = 0; i < maxCards; i += 1) {
      const nextIndex = (activeIndex + i) % videos.length;
      list.push(videos[nextIndex]);
    }
    return list;
  }, [activeIndex, videos]);

  if (!windowVideos.length) return null;

  const handlePrev = () => {
    if (!videos?.length) return;
    setActiveIndex((prev) => (prev - 1 + videos.length) % videos.length);
    setProgress(0);
  };

  const handleNext = () => {
    if (!videos?.length) return;
    setActiveIndex((prev) => (prev + 1) % videos.length);
    setProgress(0);
  };

  return (
    <section className="relative h-[22vh] min-h-[180px] max-h-[260px] bg-gradient-to-r from-retro-dark via-retro-black to-retro-dark px-6 md:px-12 pt-4 pb-6 overflow-hidden border-b border-accent-gold/10">
      <div className="flex items-center justify-between mb-3">
        <div>
          <p className="text-[11px] uppercase tracking-[0.18em] text-accent-gold/70 font-semibold">
            {t('previewRail')}
          </p>
          <h2 className="text-lg md:text-xl font-semibold text-white">{t('autoNext')}</h2>
        </div>
        <div className="flex items-center gap-2">
          <button
            onClick={handlePrev}
            className="w-9 h-9 rounded-full border border-white/10 bg-white/5 text-white hover:border-accent-gold hover:text-accent-gold transition-colors"
            aria-label="Vorherige Vorschau"
          >
            <ChevronLeft size={16} />
          </button>
          <button
            onClick={handleNext}
            className="w-9 h-9 rounded-full border border-white/10 bg-white/5 text-white hover:border-accent-gold hover:text-accent-gold transition-colors"
            aria-label="Naechste Vorschau"
          >
            <ChevronRight size={16} />
          </button>
        </div>
      </div>

      <div className="relative h-[70%] flex items-center">
        {windowVideos.map((video, idx) => {
          const isActive = idx === 0;
          const overlapClass = idx > 0 ? '-ml-10 sm:-ml-14' : '';
          return (
            <div
              key={video.id || video.ytId || idx}
              onClick={() => onPlay(video)}
              className={cn(
                'relative rounded-xl overflow-hidden cursor-pointer transition-all duration-500 border border-accent-gold/25 bg-retro-dark/60 shadow-lg shadow-black/40',
                overlapClass,
                isActive
                  ? 'h-full w-[42%] md:w-[36%] z-30'
                  : 'h-[70%] w-[26%] md:w-[22%] z-20 opacity-80',
                idx >= 3 && 'hidden md:block',
                idx >= 4 && 'hidden lg:block'
              )}
            >
              <img
                src={video.thumbnailUrl || getYouTubeThumbnail(video.ytId, 'hq')}
                alt={video.title}
                className="w-full h-full object-cover"
                loading="lazy"
              />
              <div className="absolute inset-0 bg-gradient-to-t from-black/85 via-black/30 to-transparent" />
              {isActive && (
                <span className="absolute top-3 left-3 px-3 py-1 rounded-full bg-accent-gold text-black text-[11px] font-semibold shadow-lg shadow-accent-gold/30">
                  {t('nowPreview')}
                </span>
              )}
              <div className="absolute bottom-3 left-3 right-3 flex items-end justify-between gap-3">
                <div className="max-w-[70%]">
                  <p className="text-sm md:text-base font-semibold leading-snug line-clamp-2">
                    {video.title}
                  </p>
                  {video.duration && (
                    <span className="text-[11px] text-accent-gold/80 font-medium">
                      {formatDuration(video.duration)}
                    </span>
                  )}
                </div>
                <button
                  className="w-10 h-10 rounded-full bg-accent-gold text-black flex items-center justify-center shadow-lg shadow-accent-gold/30 hover:bg-accent-amber transition-colors"
                  aria-label={t('play')}
                >
                  <Play size={18} fill="currentColor" />
                </button>
              </div>
            </div>
          );
        })}
      </div>

      <div className="mt-3 h-1.5 w-full rounded-full bg-white/10 overflow-hidden">
        <div
          className="h-full bg-accent-gold transition-all duration-200"
          style={{ width: `${progress}%` }}
        />
      </div>
    </section>
  );
}

/* ========== Content Row (Carousel with Gold Accents) ========== */
function ContentRow({
  title,
  icon,
  videos,
  onPlay,
  showProgress = false,
  showExplanation = false,
  explainer,
}) {
  const rowRef = useRef(null);
  const [canScrollLeft, setCanScrollLeft] = useState(false);
  const [canScrollRight, setCanScrollRight] = useState(true);

  const scroll = (dir) => {
    if (!rowRef.current) return;
    const amount = rowRef.current.clientWidth * 0.75;
    rowRef.current.scrollBy({ left: dir === 'left' ? -amount : amount, behavior: 'smooth' });
  };

  const checkScroll = () => {
    if (!rowRef.current) return;
    const { scrollLeft, scrollWidth, clientWidth } = rowRef.current;
    setCanScrollLeft(scrollLeft > 10);
    setCanScrollRight(scrollLeft < scrollWidth - clientWidth - 10);
  };

  if (!videos?.length) return null;

  return (
    <div className="group/row">
      {/* Title */}
      <h2 className="text-base md:text-lg font-semibold mb-3 px-6 md:px-12 flex items-center gap-2">
        {typeof icon === 'string' ? <span className="text-lg">{icon}</span> : icon}
        <span>{title}</span>
        <span className="text-accent-gold/50 text-sm font-normal">({videos.length})</span>
      </h2>

      {/* Carousel */}
      <div className="relative">
        {/* Left Arrow */}
        <button
          onClick={() => scroll('left')}
          className={cn(
            'absolute left-0 top-0 bottom-0 z-20 w-12 md:w-16 flex items-center justify-center',
            'bg-gradient-to-r from-retro-black to-transparent',
            'opacity-0 group-hover/row:opacity-100 transition-opacity',
            'hover:text-accent-gold',
            !canScrollLeft && 'hidden'
          )}
        >
          <ChevronLeft className="w-8 h-8" />
        </button>

        {/* Right Arrow */}
        <button
          onClick={() => scroll('right')}
          className={cn(
            'absolute right-0 top-0 bottom-0 z-20 w-12 md:w-16 flex items-center justify-center',
            'bg-gradient-to-l from-retro-black to-transparent',
            'opacity-0 group-hover/row:opacity-100 transition-opacity',
            'hover:text-accent-gold',
            !canScrollRight && 'hidden'
          )}
        >
          <ChevronRight className="w-8 h-8" />
        </button>

        {/* Scrollable Row */}
        <div
          ref={rowRef}
          onScroll={checkScroll}
          className="flex gap-3 md:gap-4 overflow-x-auto px-6 md:px-12 pb-4 scroll-smooth scrollbar-hide"
          style={{ scrollbarWidth: 'none', msOverflowStyle: 'none' }}
        >
          {videos.slice(0, 20).map((video) => (
            <VideoCard
              key={video.id}
              video={video}
              onPlay={onPlay}
              showProgress={showProgress}
              showExplanation={showExplanation}
              explainer={explainer}
            />
          ))}
        </div>
      </div>
    </div>
  );
}

